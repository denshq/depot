<p class="notice"><%= notice %></p>

<h1>Catalog</h1>

<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <p><%= product.description %></p>
        <div class="price_line">
          <span class="price"><%= product.price %><i class="fas fa-euro-sign"></i></span>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>