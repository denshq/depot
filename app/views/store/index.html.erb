<p class="notice"><%= notice %></p>

<h1>Catalog</h1>

<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <p><%= product.description %></p>
        <div class="price-line">
          <span class="price"><%= product.price %><i class="fas fa-euro-sign"></i></span>
          <%= button_to 'Add to Cart', line_items_path(product_id: product), class: "button button-green-border price-button" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>