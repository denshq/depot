<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Catalog</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= image_tag(product.image_url) %>
          <h3><%= product.title %></h3>
          <p><%= product.description %></p>
          <div class="price-line">
            <span class="price"><%= product.price %><i class="fas fa-euro-sign"></i></span>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, class: "button button-green-border price-button" %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>